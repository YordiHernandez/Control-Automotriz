<%- include ('partials/_header') -%>
<div class="card border-light mb-4" style="max-width: 100%;">
<div class="card-header"><a href="/menu_admin" class="btn btn-info">Regresar</a> Clientes </div>
<div class="card-body">
<div class="container">
    <div class="row mt-1">
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N.</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>DPI</th>
                        <th>Numero</th>
                        <th>Dirección</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                <% if (data) { %>
                    <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= (i + 1)%></td>
                            <td style="display: none;"><%= (data[i].pk_cliente) %></td>
                            <td><%= (data[i].nombre) %></td>
                            <td><%= (data[i].correo) %></td>
                            <td><%= (data[i].dpi) %></td>
                            <td><%= (data[i].numero) %></td>
                            <td><%= (data[i].direccion_cliente) %></td>
                            <td>
                                <a href="cliente/delete/<%= data[i].pk_cliente %>" class="btn btn-danger">Borrar</a>
                                <a href="cliente/update/<%= data[i].pk_cliente %>" class="btn btn-info">Modificar</a>
                            </td>
                        </tr>
                <% } %>
                <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-3" style="margin-left: 5px;">
            <div class="card bg-light ">
                <div class="card-body">
                    <div class="card-header">Ingresar Cliente</div>
                    <form action="cliente/add" method="post" style="padding: 5px;">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Inserte Nombre" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="correo" placeholder="Inserte Correo" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="dpi" placeholder="Inserte DPÏ" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="numero" placeholder="Inserte Numero teleofonico" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="direccion_cliente" placeholder="Inserte Direccion" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-top: 5px;">
                            Guardar Marca
                        </button>
                    </form>
                </div> 
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>
<%- include ('partials/_footer') -%>