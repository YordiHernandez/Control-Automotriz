<%- include ('../partials/_header') -%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card">
                    <form action="/citas/update/<%= (data.pk_cita) %>" method="post" style="padding: 5px;">
                        <div class="form-group">
                            <input type="text" name="id" value="<%= (data.pk_cita) %>" class="form-control" style="margin-bottom: 5px; display:none;"/>
                        </div>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Fecha_Entrada" value="<%= (data.fecha_entrada) %>" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Fecha_Salida"  value="<%= (data.fecha_salida) %>" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="Estado" value="<%= (data.estado) %>" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="Foto" value="<%= (data.foto) %>" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="Empleado" value="<%= (data.fk_empleado) %>" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-top: 5px;">
                            Editar Cita
                        </button>
                </div>
            </div>
            </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/_footer') -%>