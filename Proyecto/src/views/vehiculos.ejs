<%- include ('partials/_header') -%>
<div class="card border-light mb-4" style="max-width: 100%;">
<div class="card-header">Vehiculos</div>
<div class="card-body">
<div class="container">
    <div class="row mt-1">
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N.</th>
                        <th>Marca</th>
                        <th>Tipo</th>
                        <th>Modelo</th>
                        <th>Placa</th>
                        <th>Color</th>
                        <th>Kilometraje</th>
                        <th>Cliente</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                <% if (data) { %>
                    <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= (i + 1)%></td>
                            <td style="display: none;"><%= (data[i].pk_Id_Vehiculo) %></td>
                            <td><%= (data[i].Marca_Vehiculo) %></td>
                            <td><%= (data[i].Tipo_Vehiculo) %></td>
                            <td><%= (data[i].Modelo_Vehiculo) %></td>
                            <td><%= (data[i].Placa_Vehiculo) %></td>
                            <td><%= (data[i].Color_Vehiculo) %></td>
                            <td><%= (data[i].Kilometraje_Vehiculo) %></td>
                            <td><%= (data[i].fk_Id_Cliente_V) %></td>
                            <td>
                                <a href="/delete/<%= data[i].pk_Id_Vehiculo %>" class="btn btn-danger">Borrar</a>
                                <a href="/update/<%= data[i].pk_Id_Vehiculo %>" class="btn btn-info">Modificar</a>
                            </td>
                        </tr>
                <% } %>
                <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-3" style="margin-left: 5px;">
            <div class="card bg-light ">
                <div class="card-body">
                    <div class="card-header">Ingresar Vehiculo</div>
                    <form action="/add" method="post" style="padding: 5px;">
                        <div class="form-group">
                            <input type="text" name="marca" placeholder="Inserte marca" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="tipo" placeholder="Inserte tipo" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="modelo" placeholder="Inserte modelo" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="placa" placeholder="Inserte numero placa" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="color" placeholder="Inserte color" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="kilometraje" placeholder="Inserte kilometraje" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="cliente" placeholder="cliente" class="form-control" style="margin-bottom: 5px;" />
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-top: 5px;">
                            Guardar Vehiculo
                        </button>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>
<%- include ('partials/_footer') -%>

