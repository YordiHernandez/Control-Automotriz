<%- include ('../partials/_header') -%>
<a href="/citas" class="btn btn-danger">Cancelar</a>
<div class="row mt-1">
<div class="col-md-5" style="margin-left: 5px;">
    <div class="card bg-light ">
        <div class="card-body">
            <div class="card-header">Registrar Mantenimiento</div>
            <form id="formulariocuerpocita" action="/cuerpo_cita/add" method="post" enctype="multipart/form-data" style="padding: 5px;">
                <div class="form-group">
                    <input type="number" name="cita" value="<%= pk_cita %>" class="form-control" style="margin-bottom: 5px; display: none;" readonly />
                </div>
                <div class="form-group">
                    <!--input type="text" name="cotizacion" placeholder="Inserte No. Cotizacion" class="form-control" style="margin-bottom: 5px;"/-->
                    <label for="servicio">Seleccione Servicio:</label>
                    <select name="servicio" class="form-control" style="margin-bottom: 5px;">
                        <% for (const opcion of qServicio) { %>
                            <option value="<%= opcion.pk_servicio %>"><%= opcion.descripcion %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="descripcion">Describa el Mantenimiento:</label>
                    <textarea type="text" name="detalle" class="form-control" style="margin-bottom: 5px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="archivo">Selecciona un archivo:</label>
                    <input type="file" name="archivo" accept=".pdf, .jpg, .jpeg, .png" />
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 5px;">
                    Guardar Cita
                </button>
            </form>
        </div>
    </div>
</div>

<%- include ('../partials/_footer') -%>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('formulariocuerpocita').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevenir que el formulario se envíe inmediatamente
        
        // Verificar si hay campos vacíos antes de mostrar la alerta de confirmación
        const inputs = this.querySelectorAll("input[type=text]");
        const selects = this.querySelectorAll("select");
        let allFilled = true;
        for (let input of inputs) {
            if (input.value.trim() === '') {
                allFilled = false;
                break;
            }
        }
        for (let select of selects) {
            if (select.value.trim() === '') {
                allFilled = false;
                break;
            }
        }

        if (!allFilled) {
            Swal.fire({
                icon: 'error',
                title: 'Algo salio mal..',
                text: 'Todos los campos deben estar llenos.',
                confirmButtonColor: '#3085d6',
            });
            return; // Detener la ejecución si hay campos vacíos
        }
        
        // Mostrar confirmación si todos los campos están llenos
        Swal.fire({
            title: '¿Estás seguro de que deseas crear este mantenimiento?',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, guardar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                icon: 'success',
                title: 'Datos Ingresados',
                text: 'Datos Ingresados con éxito',
                confirmButtonColor: '#00D755'
                }).then((result) => {
                    this.submit(); // Enviar el formulario si el usuario confirma
                });
            }
        });
    });
</script>
