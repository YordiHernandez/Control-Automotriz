<%- include ('../partials/_header') -%>

<div class="row mt-1">
<div class="col-md-5" style="margin-left: 5px;">
    <a href="/cotizacion" class="btn btn-info">Regresar</a>
    <a href="/crear_vehiculo" class="btn btn-success">Crear Nuevo Vehiculo</a>   
    <div class="card bg-light ">
        <div class="card-body">
            <div class="card-header">Ingresar Solicitud</div>
            <form id="formulariocotizacion" action="/cotizacion/add" method="post" style="padding: 5px;">
                <!--div class="form-group">
                    <input type="text" name="presupuesto" placeholder="Inserte Presupuesto" class="form-control" style="margin-bottom: 5px; display: none;"/>
                </div-->
                <div class="form-group">
                    <!--input type="text" name="vehiculo" placeholder="Inserte Vehiculo" class="form-control" style="margin-bottom: 5px;" /-->
                    <label for="vehiculo">Seleccione Vehiculo:</label>
                    <select name="vehiculo" id="vehiculo" class="form-control" style="margin-bottom: 10px;">
                        <% for (const opcion of qvehiculo) { %>
                            <option value="<%= opcion.pk_vehiculo %>"><%= opcion.placa %></option>
                        <% } %>
                    </select>
                    <div class="form-group">
                        <label for="fechaHora">Fecha y hora:</label>
                        <input type="datetime-local" id="fechaHora" name="fechaHora" min="<%= fechaMinimaFormateada %>" max="<%= fechaMaximaFormateada %>">
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Describa el problema:</label>
                        <textarea type="text" name="descripcion" class="form-control" style="margin-bottom: 5px;"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 5px;">
                    Guardar Solicitud
                </button>
                
        </div>
    </div>
    </form>
</div>

<%- include ('../partials/_footer') -%>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('formulariocotizacion').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevenir que el formulario se envíe inmediatamente
        
        // Verificar si hay campos vacíos antes de mostrar la alerta de confirmación
        const inputs = this.querySelectorAll("input[type=text]");
        const selects = this.querySelectorAll("select");
        let allFilled = true;
        for (let input of inputs) {
            if (input.value.trim() === '') {
                allFilled = false;
                break;
            }
        }
        for (let select of selects) {
            if (select.value.trim() === '') {
                allFilled = false;
                break;
            }
        }

        if (!allFilled) {
            Swal.fire({
                icon: 'error',
                title: 'Algo salio mal..',
                text: 'Todos los campos deben estar llenos.',
                confirmButtonColor: '#3085d6',
            });
            return; // Detener la ejecución si hay campos vacíos
        }
        
        // Mostrar confirmación si todos los campos están llenos
        Swal.fire({
            title: '¿Estás seguro de que deseas guardar esta cotización?',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, guardar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                icon: 'success',
                title: 'Datos Ingresados',
                text: 'Datos Ingresados con éxito',
                confirmButtonColor: '#00D755'
                }).then((result) => {
                    this.submit(); // Enviar el formulario si el usuario confirma
                });
            }
        });
    });
</script>
