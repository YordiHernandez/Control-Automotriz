<%- include ('partials/_header') -%>
<div class="card border-light mb-4" style="max-width: 100%;">
<div class="card-header">Marcas</div>
<div class="card-body">
<div class="container">
    <div class="row mt-1">
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N.</th>
                        <th>Descripcion</th>
                    </tr>
                </thead>
                <tbody>
                <% if (data) { %>
                    <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= (i + 1)%></td>
                            <td style="display: none;"><%= (data[i].pk_marca) %></td>
                            <td><%= (data[i].descripcion) %></td>
                            <td>
                                <a href="marca/delete/<%= data[i].pk_marca %>" class="btn btn-danger">Borrar</a>
                                <a href="marca/update/<%= data[i].pk_marca %>" class="btn btn-info">Modificar</a>
                            </td>
                        </tr>
                <% } %>
                <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-3" style="margin-left: 5px;">
            <div class="card bg-light ">
                <div class="card-body">
                    <div class="card-header">Ingresar Marca</div>
                    <form action="marca/add" method="post" style="padding: 5px;">
                        <div class="form-group">
                            <input type="text" name="desc" placeholder="Inserte marca" class="form-control" style="margin-bottom: 5px;"/>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-top: 5px;">
                            Guardar Marca
                        </button>
                    </form>
                </div> 
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>
<%- include ('partials/_footer') -%>